@model IEnumerable<HavuzProjesi.Models.Yuzme>

@{
                /**/

                ViewBag.Title = "Yüzme";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    });

</script>

<h2>Yüzme</h2>



<a class="btn btn-group-sm" href="/Yuzme/Create/">Yeni Oluştur</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.YuzmeId</td>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Yuzme/Edit/@item.YuzmeId">Güncelle</a> | <a href="/Yuzme/Delete/@item.YuzmeId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>
